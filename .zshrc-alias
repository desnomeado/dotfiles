#!/bin/zsh
alias sudo="doas "
alias doas="doas "
alias vim="nvim"
alias vi="nvim"
alias cl="clear"
alias ls="ls --color=always"
alias l="ls -lAh"
alias la="ls -lah"
alias ll="ls -lh"
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"
alias :q="exit"
alias ygo="~/Downloads/yugioh/YGO\ Omega.x86_64 & disown"

run() {
	if test -f Cargo.toml; then
		command cargo run $@
	elif test -f package.json; then
		command yarn run $@
	elif test -f obj; then
		command dotnet run $@
	else
		echo "no target found"
		return 1
	fi
}

export EDITOR=nvim

emacs() {
	local is_no_window=false

	for arg in $@; do
		if [[ "${arg}" = "-nw" ]] || [[ "${arg}" = "--no-window-system" ]]; then
			is_no_window=true
		fi
	done

	$is_no_window && TERM=xterm-24bit command emacs $@ || command emacs $@
}
